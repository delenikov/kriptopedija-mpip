<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/currencyName"
        android:layout_width="245dp"
        android:layout_height="49dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="68dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/currencyPrice"
        android:layout_width="245dp"
        android:layout_height="38dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyName"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/currencyPhoto"
        android:layout_width="224dp"
        android:layout_height="145dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyPrice"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/currencyHourDiff"
        android:layout_width="191dp"
        android:layout_height="42dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyPhoto"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/currencyDayDiff"
        android:layout_width="263dp"
        android:layout_height="41dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyHourDiff"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/currencyWeekDiff"
        android:layout_width="263dp"
        android:layout_height="41dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyDayDiff"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>